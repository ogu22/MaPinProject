<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    tools:context=".Pin_infoActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/postbuckbutton"
                android:layout_width="67dp"
                android:layout_height="77dp"
                android:text="↵"
                android:textSize="45sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/postbutton1"
                android:layout_width="332dp"
                android:layout_height="62dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="28dp"
                android:text="投稿１"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <Button
                android:id="@+id/postbutton2"
                android:layout_width="332dp"
                android:layout_height="62dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:text="投稿２"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postbutton1" />

            <Button
                android:id="@+id/postbutton3"
                android:layout_width="332dp"
                android:layout_height="62dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:text="投稿３"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postbutton2" />

            <Button
                android:id="@+id/postbutton4"
                android:layout_width="332dp"
                android:layout_height="68dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:text="投稿４"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postbutton3" />

            <Button
                android:id="@+id/postbutton"
                android:layout_width="263dp"
                android:layout_height="63dp"
                android:layout_marginStart="67dp"
                android:layout_marginTop="24dp"
                android:text="評価を投稿する"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postbutton4" />

            <Button
                android:id="@+id/newbutton"
                android:layout_width="263dp"
                android:layout_height="63dp"
                android:layout_marginStart="67dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="新しく投稿する"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postbutton" />

            <ImageView
                android:id="@+id/postimageView2"
                android:layout_width="392dp"
                android:layout_height="159dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="374dp"
                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:text="場所の名前"
                android:textSize="36sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postimageView2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="370dp"
                android:layout_height="165dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="26dp"
                android:text="説明"
                android:textSize="36sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="810dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="426dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>